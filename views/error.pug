extends layout

block content
  div.error-container
    h2.error-status= error.status || 500
    div.error-message
      span.material-symbols-rounded error
      p= message
    
    if error.status === 11000
      p.error-detail 데이터베이스 중복 키 오류: 이미 사용 중인 사용자 이름입니다.
    
    div.error-action
      a(href='/')
        span.material-symbols-rounded home
        | 홈으로 돌아가기
      a(href='javascript:history.back()')
        span.material-symbols-rounded arrow_back
        | 이전 페이지로 돌아가기
  
  style.
    .error-container {
      max-width: 600px;
      margin: 0 auto;
      text-align: center;
      background-color: rgba(32, 32, 32, 0.6);
      border-radius: var(--radius-lg);
      padding: 40px;
      box-shadow: var(--shadow);
      border: 1px solid var(--border);
    }
    
    .error-status {
      font-size: 80px;
      font-weight: 700;
      margin-bottom: 20px;
      background: linear-gradient(90deg, var(--primary) 0%, var(--secondary) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .error-detail {
      margin: 20px 0;
      color: var(--text-secondary);
    }
    
    .error-action {
      margin-top: 30px;
      display: flex;
      justify-content: center;
      gap: 20px;
    }
    
    .error-action a {
      display: flex;
      align-items: center;
      gap: 8px;
    }
    
    @media (max-width: 480px) {
      .error-action {
        flex-direction: column;
        gap: 15px;
      }
    } 